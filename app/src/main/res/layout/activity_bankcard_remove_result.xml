<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/w320"
        android:layout_height="@dimen/h320"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h300" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/h150"
        android:layout_marginTop="@dimen/h60"
        android:text="解绑成功"
        android:textSize="@dimen/h60"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/successLl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h354"
        android:layout_marginLeft="@dimen/w35"
        android:layout_marginRight="@dimen/w35"
        android:background="@drawable/shape_rectangle_white"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rivLogo"
            android:layout_width="@dimen/w160"
            android:layout_height="@dimen/h160"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w60"
            app:riv_oval="true" />

        <View
            android:layout_width="@dimen/w2"
            android:layout_height="@dimen/h143"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w58"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/w36"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBankName"
                style="@style/text_nomal_min"
                android:text="北京银行" />

            <TextView
                android:id="@+id/tvBankNum"
                style="@style/text_nomal_min"
                android:layout_marginTop="@dimen/h37"
                android:text="***** ****** ****** ***555" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
