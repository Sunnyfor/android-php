<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/h20"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/w138"
            android:layout_height="@dimen/w138"
            android:layout_marginBottom="@dimen/h35"
            android:layout_marginLeft="@dimen/w35"
            android:layout_marginTop="@dimen/h35"
            android:src="@drawable/default_content"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w20"
            android:layout_toRightOf="@+id/ivLogo"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nameLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:maxLines="2"
                    tools:text="小红娘"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/w46" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/h4"
                    android:layout_marginLeft="@dimen/w20"
                    android:background="@color/red"
                    android:padding="@dimen/w10"
                    android:text="企业主"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w25" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="2017.10.1"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/w34" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="@dimen/w144"
            android:layout_height="@dimen/h58"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w35"
            android:background="@drawable/shape_rectangle_round_gray"
            android:gravity="center"
            android:text="已关注"
            android:textColor="@color/blackText"
            android:textSize="@dimen/w34" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detailLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w35"
            android:layout_marginRight="@dimen/w35"
            android:lineSpacingExtra="@dimen/h15"
            android:text="5G时代群雄逐鹿，谁更胜一筹？5G时代群雄逐鹿，谁更胜一筹？ "
            android:textColor="@color/blackText"
            android:textSize="@dimen/h43" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w40"
            android:layout_marginRight="@dimen/w40"
            android:layout_marginTop="@dimen/h25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageOne"
                android:layout_width="@dimen/w318"
                android:layout_height="@dimen/h230"/>

            <ImageView
                android:id="@+id/imageTwo"
                android:layout_width="@dimen/w318"
                android:layout_height="@dimen/h230"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginStart="@dimen/w20" />

            <ImageView
                android:id="@+id/imageThree"
                android:layout_width="@dimen/w318"
                android:layout_height="@dimen/h230"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginStart="@dimen/w20" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h2"
            android:layout_marginTop="@dimen/h40"
            android:background="@color/lineGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h116"
            android:gravity="right"
            android:orientation="horizontal">

            <com.cocosh.shmstore.widget.textview.ICONTextView
                android:id="@+id/lookIcon"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:text="@string/iconLook"
                android:textColor="@color/grayText" />

            <TextView
                android:id="@+id/showNumber"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w75"
                android:text="80"
                android:textColor="@color/grayText" />

            <com.cocosh.shmstore.widget.textview.ICONTextView
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:text="@string/iconComment"
                android:textColor="@color/grayText" />

            <TextView
                android:id="@+id/commentNumber"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w40"
                android:text="0"
                android:textColor="@color/grayText" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>