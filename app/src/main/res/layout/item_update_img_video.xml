<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/w230"
        android:layout_height="@dimen/h230"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27pt">
    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_update_refund"
        android:scaleType="centerCrop"/>


     <RelativeLayout
         android:id="@+id/view_delete"
         android:layout_width="@dimen/w60"
         android:layout_height="@dimen/w60"
         android:layout_alignParentEnd="true"
         android:layout_marginRight="@dimen/w10"
         android:layout_marginTop="@dimen/w10"
         android:layout_alignParentRight="true"
         android:layout_marginEnd="@dimen/w10">
         <View
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ic_info_delete"/>
     </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>