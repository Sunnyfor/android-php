<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w868"
    android:layout_height="@dimen/h508"
    android:background="@drawable/shape_income_bg_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h50"
        android:text="添加兴趣爱好"
        android:textColor="@color/blackText"
        android:textSize="@dimen/w46" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h20"
        android:text=" 其他 里我还喜欢"
        android:textColor="@color/blackText"
        android:textSize="@dimen/w46" />

    <com.cocosh.shmstore.widget.eidttext.SmEditText
        android:id="@id/edtName"
        android:layout_width="@dimen/w732"
        android:layout_height="@dimen/h128"
        android:layout_gravity="center_horizontal"
        android:background="@color/activity_bg"
        android:maxLength="4"
        android:paddingLeft="@dimen/w65"
        android:layout_marginTop="@dimen/h15"
        android:gravity="center"
        android:paddingRight="@dimen/w60" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/w43"
            android:textColor="@color/grayText"
            android:text="取消"/>

        <View
            android:layout_width="@dimen/h2"
            android:layout_height="@dimen/h76"
            android:background="@color/text_gray"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@id/tvSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/w43"
            android:textColor="@color/red"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>