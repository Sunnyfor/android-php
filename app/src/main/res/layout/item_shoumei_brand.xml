<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/h20"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detailLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w68"
            android:layout_marginTop="@dimen/h45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="置顶"
                android:textColor="@color/blackText"
                android:textSize="@dimen/w43" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/h4"
                android:layout_marginLeft="@dimen/w20"
                android:background="@color/red"
                android:paddingLeft="@dimen/w10"
                android:paddingRight="@dimen/w10"
                android:text="精"
                android:textColor="@color/white"
                android:textSize="@dimen/w25" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w68"
            android:layout_marginRight="@dimen/w68"
            android:layout_marginTop="@dimen/h20"
            android:lineSpacingExtra="@dimen/h20"
            android:text="5G时代群雄逐鹿，谁更胜一筹？5G时代群雄逐鹿，谁更胜一筹？ "
            android:textColor="@color/blackText"
            android:textSize="@dimen/h40" />


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/w68"
            android:layout_marginTop="@dimen/h20"
            android:text="2017.10.1"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/w34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w40"
            android:layout_marginRight="@dimen/w40"
            android:layout_marginTop="@dimen/h25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageOne"
                android:layout_width="@dimen/w318"
                android:layout_height="@dimen/h230"></ImageView>

            <ImageView
                android:id="@+id/imageTwo"
                android:layout_width="@dimen/w318"
                android:layout_height="@dimen/h230"
                android:layout_marginLeft="@dimen/w20"></ImageView>

            <ImageView
                android:id="@+id/imageThree"
                android:layout_width="@dimen/w318"
                android:layout_height="@dimen/h230"
                android:layout_marginLeft="@dimen/w20"></ImageView>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h2"
            android:layout_marginTop="@dimen/h40"
            android:background="@color/lineGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h116"
            android:gravity="right"
            android:orientation="horizontal">

            <com.cocosh.shmstore.widget.textview.ICONTextView
                android:id="@+id/lookIcon"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:textColor="@color/grayText"
                android:text="@string/iconLook" />

            <TextView
                android:id="@+id/showNumber"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w75"
                android:text="80"
                android:textColor="@color/grayText" />

            <com.cocosh.shmstore.widget.textview.ICONTextView
                android:id="@+id/commentIcon"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:textColor="@color/grayText"
                android:text="@string/iconComment" />

            <TextView
                android:id="@+id/commentNumber"
                style="@style/text_nomal_min"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w40"
                android:text="25"
                android:textColor="@color/grayText" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>