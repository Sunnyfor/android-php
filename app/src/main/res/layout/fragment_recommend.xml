<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cocosh.shmstore.widget.HomeAdView
                android:id="@+id/homeAdView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h576"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rlPool"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h140">

                <View
                    android:layout_width="@dimen/w417"
                    android:layout_height="@dimen/h41"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/w36"
                    android:layout_marginLeft="@dimen/w36"
                    android:background="@mipmap/text_redpackger_money" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/w36">

                    <TextView
                        android:id="@id/tvMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/w23"
                        android:text="12,123,12"
                        android:textColor="@color/red"
                        android:textSize="@dimen/w63" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="元"
                        android:textColor="@color/red"
                        android:textSize="@dimen/w40" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h156"
                android:background="@color/white"
                android:gravity="center_vertical">


                <LinearLayout
                    android:id="@+id/bonusOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/w115"
                        android:layout_height="@dimen/h115"
                        android:layout_marginStart="@dimen/w43"
                        android:layout_marginLeft="@dimen/w43"
                        android:background="@mipmap/ic_bonus_one" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/w6"
                        android:layout_marginLeft="@dimen/w6"
                        android:gravity="center"
                        android:text="大众红包"
                        android:textColor="@color/blackText"
                        android:textSize="@dimen/w40" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/w1"
                    android:layout_height="@dimen/h104"
                    android:background="@color/lineGray" />


                <LinearLayout
                    android:id="@+id/bonusTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/w115"
                        android:layout_height="@dimen/h115"
                        android:layout_marginStart="@dimen/w43"
                        android:layout_marginLeft="@dimen/w43"
                        android:background="@mipmap/ic_bonus_two" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/w6"
                        android:layout_marginLeft="@dimen/w6"
                        android:gravity="center"
                        android:text="精准红包"
                        android:textColor="@color/blackText"
                        android:textSize="@dimen/w40" />
                </LinearLayout>


                <View
                    android:layout_width="@dimen/w1"
                    android:layout_height="@dimen/h104"
                    android:background="@color/lineGray" />


                <LinearLayout
                    android:id="@+id/bonusThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/w115"
                        android:layout_height="@dimen/h115"
                        android:layout_marginStart="@dimen/w43"
                        android:layout_marginLeft="@dimen/w43"
                        android:background="@mipmap/ic_bonus_three" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/w6"
                        android:layout_marginLeft="@dimen/w6"
                        android:gravity="center"
                        android:text="粉丝红包"
                        android:textColor="@color/blackText"
                        android:textSize="@dimen/w40" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h35"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/h40"
                    android:text="排行榜"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/w52" />

                <View
                    android:layout_width="@dimen/w150"
                    android:layout_height="@dimen/h3"
                    android:layout_gravity="center_horizontal"
                    android:background="#FF666666" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h435"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/w35"
                    android:paddingLeft="@dimen/w35">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/h40"
                            android:text="热销·榜"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/w42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品质好货 一触即达"
                            android:textColor="#FFB3B3B3"
                            android:textSize="@dimen/w29" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/h23"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivRank1"
                                android:layout_width="@dimen/w295"
                                android:layout_height="@dimen/h302"
                                android:src="@color/activity_bg" />

                            <ImageView
                                android:id="@+id/ivRank2"
                                android:layout_width="@dimen/w295"
                                android:layout_height="@dimen/h302"
                                android:layout_marginStart="@dimen/w35"
                                android:layout_marginLeft="@dimen/w35"
                                android:src="@color/activity_bg" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/w3"
                        android:layout_height="@dimen/h418"
                        android:layout_marginLeft="@dimen/w29"
                        android:layout_marginTop="@dimen/h52"
                        android:layout_marginRight="@dimen/w29"
                        android:background="#FFF0F0F0" />

                    <LinearLayout
                        android:layout_width="@dimen/w719"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/h40"
                            android:text="热搜·榜"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/w42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="都在寻找的好货"
                            android:textColor="#FFB3B3B3"
                            android:textSize="@dimen/w29" />

                        <ImageView
                            android:id="@+id/ivRank3"
                            android:layout_width="@dimen/w295"
                            android:layout_height="@dimen/h302"
                            android:layout_marginTop="@dimen/w23"
                            android:src="@color/activity_bg" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="@dimen/w1022"
                    android:layout_height="@dimen/h3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/h23"
                    android:background="#FFF0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/w14"
                    android:layout_marginBottom="@dimen/h43"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/w35"
                    android:paddingRight="@dimen/w35">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好评·榜"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/w42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="口碑单品 为你精选"
                            android:textColor="#FFB3B3B3"
                            android:textSize="@dimen/w29" />

                        <ImageView
                            android:id="@+id/ivRank4"
                            android:layout_width="@dimen/w295"
                            android:layout_height="@dimen/h302"
                            android:layout_marginTop="@dimen/w23"
                            android:src="@color/activity_bg" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/w3"
                        android:layout_height="@dimen/h418"
                        android:layout_marginLeft="@dimen/w29"
                        android:layout_marginRight="@dimen/w29"
                        android:background="#FFF0F0F0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="必买·榜"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/w42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="必粉都爱买"
                            android:textColor="#FFB3B3B3"
                            android:textSize="@dimen/w29" />

                        <ImageView
                            android:id="@+id/ivRank5"
                            android:layout_width="@dimen/w295"
                            android:layout_height="@dimen/h302"
                            android:layout_marginTop="@dimen/w23"
                            android:src="@color/activity_bg" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/w3"
                        android:layout_height="@dimen/h418"
                        android:layout_marginLeft="@dimen/w29"
                        android:layout_marginRight="@dimen/w29"
                        android:background="#FFF0F0F0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="回购·榜"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/w42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买了又买的品质好货"
                            android:textColor="#FFB3B3B3"
                            android:textSize="@dimen/w29" />

                        <ImageView
                            android:id="@+id/ivRank6"
                            android:layout_width="@dimen/w295"
                            android:layout_height="@dimen/h302"
                            android:layout_marginTop="@dimen/w23"
                            android:background="@color/activity_bg" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llMarket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h35"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/h40"
                    android:text="精品好货"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/w52" />

                <View
                    android:layout_width="@dimen/w202"
                    android:layout_height="@dimen/h3"
                    android:layout_gravity="center_horizontal"
                    android:background="#FF666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/w14"
                    android:text="直面全球品牌好货"
                    android:textColor="@color/red"
                    android:textSize="@dimen/w35" />

                <android.support.v7.widget.RecyclerView
                    android:id="@id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/w46" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>