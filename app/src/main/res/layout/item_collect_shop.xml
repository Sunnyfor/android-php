<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h239"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/w137"
        android:layout_marginLeft="@dimen/w137"
        android:background="@color/lineGray" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgPhoto"
        android:layout_width="@dimen/w158"
        android:layout_height="@dimen/h158"
        android:layout_marginStart="@dimen/w35"
        android:layout_marginLeft="@dimen/w35"
        android:layout_centerVertical="true"
        android:src="@color/activity_bg"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/txt_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/w35"
        android:layout_marginLeft="@dimen/w35"
        android:layout_toStartOf="@id/txt_cancel"
        android:layout_toLeftOf="@id/txt_cancel"
        android:layout_toEndOf="@id/imgPhoto"
        android:layout_toRightOf="@id/imgPhoto"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/blackText"
        android:textSize="@dimen/w46"
        tools:text="蔓承时尚" />

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/w35"
        android:layout_marginRight="@dimen/w35"
        android:background="@drawable/shape_btn_bonus_circle"
        android:gravity="center"
        android:paddingLeft="@dimen/w29"
        android:paddingTop="@dimen/h13"
        android:paddingRight="@dimen/w29"
        android:paddingBottom="@dimen/h13"
        android:text="取消收藏"
        android:textColor="@color/red"
        android:textSize="@dimen/w32" />
</RelativeLayout>