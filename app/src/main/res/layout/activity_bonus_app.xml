<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w243"
                android:layout_height="@dimen/h243"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w60"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/w60"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FINE精制家具-FFDM.com.cn-纯正美式家具"
                    android:textSize="@dimen/w43" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h10"
                    android:text="FINE精制月星家居网 优质天然原材料及精良的手工工艺完美呈现美国设计师的原创设计,精工细作专业制造"
                    android:textSize="@dimen/w37" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_full"
            android:scaleType="fitXY"/>

        <Button
            android:id="@id/btnSure"
            style="@style/ButtonStyle"
            android:layout_gravity="center_horizontal"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/h40"
            android:text="立即下载" />


        <Button
            android:id="@id/btnSure"
            style="@style/ButtonStyle"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_btn_border_gray"
            android:textColor="@color/grayText"
            android:layout_marginTop="@dimen/h30"
            android:layout_marginBottom="@dimen/h35"
            android:text="领取红包" />
    </LinearLayout>
</ScrollView>