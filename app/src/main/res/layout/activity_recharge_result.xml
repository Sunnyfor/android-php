<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/w320"
        android:layout_height="@dimen/h320"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h300" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h70"
        android:text="转出成功!"
        android:textSize="@dimen/h48" />

    <com.cocosh.shmstore.widget.view.ItemShowView
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h178"
        android:background="@color/white"
        android:visibility="invisible"></com.cocosh.shmstore.widget.view.ItemShowView>

    <com.cocosh.shmstore.widget.view.ItemShowView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="invisible"></com.cocosh.shmstore.widget.view.ItemShowView>

    <com.cocosh.shmstore.widget.view.ItemShowView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="invisible"></com.cocosh.shmstore.widget.view.ItemShowView>

    <com.cocosh.shmstore.widget.view.ItemShowView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="invisible"></com.cocosh.shmstore.widget.view.ItemShowView>
</LinearLayout>
