<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt"
        android:textSize="@dimen/w50"
        android:textColor="@color/white"
        android:text="下一步"
        android:layout_marginBottom="@dimen/h33"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/w35"
        android:layout_marginRight="@dimen/w35"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h132" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="@dimen/h10"
        android:layout_above="@+id/bt"
        android:background="@color/white"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
