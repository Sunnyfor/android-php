<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/h72"
            android:background="@color/gray_line"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/w58"
            android:text="认证信息"
            android:textColor="@color/blackText"
            android:textSize="@dimen/h35" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="认证状态"
            app:valueText="已认证" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="认证时间" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="首媒号" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="认证账号" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/h72"
            android:background="@color/gray_line"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/w58"
            android:text="基础信息"
            android:textColor="@color/blackText"
            android:textSize="@dimen/h35" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="认证人" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="性别" />


        <com.cocosh.shmstore.widget.view.ItemShowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="证件类型"
            app:valueText="身份证"/>


        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="证件号码" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="住址" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_validityPeriodTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="证件有效期" />


        <com.cocosh.shmstore.widget.view.ItemShowView
            android:id="@+id/isv_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nameText="签发机关" />

        <com.cocosh.shmstore.widget.view.ItemShowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            app:nameText="人脸识别"
            app:valueText="已完善" />

    </LinearLayout>
</ScrollView>