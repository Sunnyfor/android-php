<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h40"
            android:text="2018-02-19 12:32"
            android:textColor="@color/grayText"
            android:textSize="@dimen/w34" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h92"
            android:layout_marginTop="@dimen/h25"
            android:background="@color/progressBg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w60"
                android:text="红包已投放"
                android:textColor="@color/grayText"
                android:textSize="@dimen/w34" />

            <com.cocosh.shmstore.widget.textview.ICONTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/w40"
                android:text=""
                android:textColor="@color/grayText"
                android:textSize="@dimen/w43" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w143"
                android:layout_height="@dimen/w186"
                android:layout_marginBottom="@dimen/h70"
                android:layout_marginLeft="@dimen/w60"
                android:layout_marginTop="@dimen/h50"
                android:background="@drawable/bg_share_bonus" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginTop="@dimen/h70"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/w95"
                    android:text="首媒   扶贫活动将于3月15日启动"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/w40" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/w95"
                    android:layout_marginTop="@dimen/h34"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:text="驳回时间：2018-03-28 00:00:00"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/w37" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>