<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/w40">

        <LinearLayout
            android:id="@+id/rlWeixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w124"
                android:layout_height="@dimen/h123"
                android:src="@drawable/weixin_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h25"
                android:text="微信"
                android:textSize="@dimen/h30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlWeixinCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w124"
                android:layout_height="@dimen/h123"
                android:src="@drawable/wechat_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h25"
                android:text="朋友圈"
                android:textSize="@dimen/h30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlQQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w124"
                android:layout_height="@dimen/h123"
                android:src="@drawable/qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h25"
                android:text="QQ"
                android:textSize="@dimen/h30" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rlWeibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w124"
                android:layout_height="@dimen/h123"
                android:src="@drawable/weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h25"
                android:text="新浪微博"
                android:textSize="@dimen/h30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlCopy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w124"
                android:layout_height="@dimen/h123"
                android:src="@drawable/copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h25"
                android:text="复制链接"
                android:textSize="@dimen/h30" />
        </LinearLayout>
    </LinearLayout>

</layout>