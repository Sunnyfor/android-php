<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h35"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w50"
            android:text="新消息通知"
            android:textColor="@color/blackText"
            android:textSize="@dimen/h43" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/h50"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="right"
            android:textColor="@color/grayText"
            android:textSize="@dimen/h43" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h2"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h35"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w50"
            android:text="通知显示消息详情"
            android:textColor="@color/blackText"
            android:textSize="@dimen/h43" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/h50"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="right"
            android:textColor="@color/grayText"
            android:textSize="@dimen/h43" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h2"
        android:background="@color/line_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h75"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w50"
            android:text="声音 "
            android:textColor="@color/blackText"
            android:textSize="@dimen/h43" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/h50"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="right"
            android:textColor="@color/grayText"
            android:textSize="@dimen/h43" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h2"
        android:background="@color/line_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w50"
            android:text="震动"
            android:textColor="@color/blackText"
            android:textSize="@dimen/h43" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/h50"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="right"
            android:textColor="@color/grayText"
            android:textSize="@dimen/h43" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h2"
        android:background="@color/line_gray" />
</LinearLayout>