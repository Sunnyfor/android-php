<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/top_new_title"
            layout="@layout/layout_top_head"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_new_title"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llPerson"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivPerson"
                        android:layout_width="@dimen/w253"
                        android:layout_height="@dimen/h253"
                        android:src="@drawable/shenfen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="实人认证"
                        android:textSize="@dimen/w40" />

                    <TextView
                        android:id="@+id/tvPersonState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="未认证"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/w35" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:src="@color/white" />

                <LinearLayout
                    android:id="@+id/llPartner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivPartner"
                        android:layout_width="@dimen/w253"
                        android:layout_height="@dimen/h253"
                        android:src="@drawable/xinmeiren" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="@string/newAuthen"
                        android:textSize="@dimen/w40" />

                    <TextView
                        android:id="@+id/tvPartnerState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="未认证"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/w35" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/h2"
                android:src="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout

                    android:id="@+id/llMedia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivMedia"
                        android:layout_width="@dimen/w253"
                        android:layout_height="@dimen/h253"
                        android:src="@drawable/fuwushang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="服务商认证"
                        android:textSize="@dimen/w40" />

                    <TextView
                        android:id="@+id/tvMediaState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="未认证"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/w35" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:src="@color/white" />

                <LinearLayout
                    android:id="@+id/llCompany"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/ivCompany"
                        android:layout_width="@dimen/w253"
                        android:layout_height="@dimen/h253"
                        android:src="@drawable/enterprise_no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="企业主认证"
                        android:textSize="@dimen/w40" />

                    <TextView
                        android:id="@+id/tvCompanyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/w5"
                        android:text="未认证"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/w35" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
