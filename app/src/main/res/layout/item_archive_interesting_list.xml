<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSubName"
        style="@style/text_nomal_min"
        android:text="家居" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivSubIcon"
        android:layout_width="@dimen/w366"
        android:layout_height="@dimen/h316"
        android:layout_marginTop="@dimen/h25"
        android:scaleType="fitXY"
        android:src="@color/red"
        app:riv_corner_radius="@dimen/w25" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/h36"
        android:orientation="horizontal"/>
</LinearLayout>

