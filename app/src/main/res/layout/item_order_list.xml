<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/item_create_order_shop" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/w46"
            android:layout_marginLeft="@dimen/w46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计"
                android:textColor="@color/blackText"
                android:textSize="@dimen/w40" />

            <TextView
                android:id="@+id/txt_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 0.00"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/w25"
                android:textSize="@dimen/w40" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/w46"
                android:layout_marginRight="@dimen/w46"
                android:text="运费:免邮"
                android:textColor="@color/blackText"
                android:textSize="@dimen/w40" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/w25">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">


            <TextView
                android:id="@+id/txt_let"
                android:layout_width="@dimen/w220"
                android:layout_height="@dimen/h90"
                android:layout_marginEnd="@dimen/w32"
                android:layout_marginRight="@dimen/w32"
                android:background="@drawable/shape_rectangle_gray_to_white"
                android:gravity="center"
                android:textColor="@color/grayText"
                android:textSize="@dimen/h40"
                android:visibility="gone"
                tools:text="联系客服" />

            <TextView
                android:id="@+id/txt_mid"
                android:layout_width="@dimen/w220"
                android:layout_height="@dimen/h90"
                android:layout_marginEnd="@dimen/w32"
                android:layout_marginRight="@dimen/w32"
                android:background="@drawable/shape_rectangle_gray_to_white"
                android:gravity="center"
                android:textColor="@color/grayText"
                android:textSize="@dimen/h40"
                android:visibility="gone"
                tools:text="查看物流" />

            <TextView
                android:id="@+id/txt_right"
                android:layout_width="@dimen/w220"
                android:layout_height="@dimen/h90"
                android:layout_marginEnd="@dimen/w46"
                android:layout_marginRight="@dimen/w46"
                android:background="@drawable/shape_rectangle_round_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/h40"
                android:visibility="gone"
                tools:text="去支付" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h2"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/line_gray" />
</LinearLayout>
