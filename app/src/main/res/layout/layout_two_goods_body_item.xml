<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/w36"
    android:layout_marginLeft="@dimen/w39"
    android:layout_marginStart="@dimen/w39">

    <ImageView
        android:id="@id/ivPhoto"
        android:layout_width="@dimen/w216"
        android:layout_height="@dimen/h216"
        android:scaleType="centerCrop"
        android:src="@color/activity_bg" />

    <TextView
        android:id="@id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="糕点"
        android:textColor="#FF666666"
        android:textSize="@dimen/w35" />
</LinearLayout>