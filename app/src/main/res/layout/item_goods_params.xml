<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_params_name"
        android:layout_width="@dimen/w200"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/w40"
        android:layout_marginLeft="@dimen/w40"
        android:textColor="@color/blackText"
        android:textSize="@dimen/w36"
        tools:text="参数" />


    <TextView
        android:id="@+id/txt_params_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w40"
        android:layout_marginRight="@dimen/w40"
        android:layout_toEndOf="@id/txt_params_name"
        android:layout_toRightOf="@id/txt_params_name"
        android:textColor="@color/grayText"
        android:layout_marginTop="@dimen/w30"
        android:layout_marginBottom="@dimen/w30"
        android:textSize="@dimen/w36"
        tools:text="参数" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w2"
        android:background="@color/lineGray"
        android:layout_marginLeft="@dimen/w40"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/w40" />
</RelativeLayout>