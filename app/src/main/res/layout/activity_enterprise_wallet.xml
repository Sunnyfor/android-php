<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h538"
        android:background="@drawable/wallet_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h88"
            android:text="服务商余额"
            android:textColor="@color/white"
            android:textSize="@dimen/h40" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h26"
            android:singleLine="true"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="@dimen/h158" />

        <TextView
            android:id="@+id/moneyList"
            style="@style/text_nomal_min"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h28"
            android:background="@drawable/shape_btn_line"
            android:gravity="center"
            android:text="收支明细"
            android:textColor="@color/white"
            android:textSize="@dimen/h40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnServiceRevenue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h143"
            android:layout_marginBottom="@dimen/w22"
            android:layout_marginLeft="@dimen/w22"
            android:layout_marginRight="@dimen/w22"
            android:background="@color/red"
            android:text="服务商收益"
            android:textColor="@color/white"
            android:textSize="@dimen/h51" />

        <Button
            android:id="@+id/btn_withdraw_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h143"
            android:layout_marginBottom="@dimen/w22"
            android:layout_marginLeft="@dimen/w22"
            android:layout_marginRight="@dimen/w22"
            android:background="@color/red"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/h51" />
    </LinearLayout>
</RelativeLayout>
