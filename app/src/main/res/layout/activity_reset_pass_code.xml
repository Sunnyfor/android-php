<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h282"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们已发送"
            android:textSize="@dimen/w50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 验证码 "
            android:textSize="@dimen/w60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到您的手机"
            android:textSize="@dimen/w50" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h60"
        android:textSize="@dimen/w50" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h105">

        <LinearLayout
            android:id="@+id/pwd_container"
            android:layout_width="@dimen/w863"
            android:layout_height="@dimen/h125"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_red_rectangle"
            android:orientation="horizontal">
            <!--放密码控件-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/pwd_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="@dimen/w5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textSize="@dimen/w50"/>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/w2"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/pwd_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="@dimen/w5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textSize="@dimen/w50"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/w2"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/pwd_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="@dimen/w5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textSize="@dimen/w50"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/w2"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/pwd_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="@dimen/w5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textSize="@dimen/w50"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/w2"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/pwd_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="@dimen/w5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textSize="@dimen/w50"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/w2"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/pwd_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="@dimen/w5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textSize="@dimen/w50"/>
            </RelativeLayout>
        </LinearLayout>
        <!--密码框里面的忘记密码-->
    </RelativeLayout>


    <com.cocosh.shmstore.widget.button.TimerButton
        android:id="@+id/tbSend"
        style="@style/CodeButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h85"/>
</LinearLayout>