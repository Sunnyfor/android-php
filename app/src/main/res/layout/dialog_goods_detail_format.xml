<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h222"
            android:layout_marginTop="@dimen/h63"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h29"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/h305"
                    android:layout_marginLeft="@dimen/h305"
                    android:text="¥"
                    android:textColor="#FFDC713A"
                    android:textSize="@dimen/w37" />

                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#FFDC713A"
                    android:textSize="@dimen/w58" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/h305"
                    android:layout_marginLeft="@dimen/h305"
                    android:text="已选择："
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/w37" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/w37"
                    tools:text="30g，2件" />
            </LinearLayout>

        </LinearLayout>


        <com.cocosh.shmstore.widget.textview.ICONTextView
            android:id="@+id/itv_close"
            android:layout_width="@dimen/w138"
            android:layout_height="@dimen/h126"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/h63"
            android:gravity="center"
            android:text="@string/iconClose"
            android:textColor="@color/grayText" />

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/w230"
            android:layout_height="@dimen/h230"
            android:layout_marginStart="@dimen/w46"
            android:layout_marginLeft="@dimen/w46"
            android:contentDescription="@null"
            android:src="@color/activity_bg" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h3"
        android:background="@color/lineGray" />

    <LinearLayout
        android:id="@+id/llLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h86"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/w46"
            android:layout_marginLeft="@dimen/w46"
            android:text="数量"
            android:textColor="@color/blackText"
            android:textSize="@dimen/w46" />

        <LinearLayout
            android:layout_width="@dimen/w389"
            android:layout_height="@dimen/h98"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/w52"
            android:layout_marginRight="@dimen/w52">

            <RelativeLayout
                android:id="@+id/rl_jian"
                android:layout_width="@dimen/w118"
                android:layout_height="match_parent"
                android:background="@drawable/bg_goods_jian">

                <View
                    android:layout_width="@dimen/w37"
                    android:layout_height="@dimen/h6"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_label_jian" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w2"
                    android:background="#ffc3c3c3" />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/w46" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w2"
                    android:layout_alignParentBottom="true"
                    android:background="#ffc3c3c3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add"
                android:layout_width="@dimen/w118"
                android:layout_height="match_parent"
                android:background="@drawable/bg_goods_add">

                <View
                    android:layout_width="@dimen/w37"
                    android:layout_height="@dimen/h39"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_label_add" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h3"
            android:layout_marginTop="@dimen/h222"
            android:background="@color/lineGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="加入购物车"
                android:textColor="@color/red"
                android:textSize="@dimen/w49" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/w49" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>