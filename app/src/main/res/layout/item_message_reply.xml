<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h40"
            android:text="2018-02-19 12:32"
            android:textColor="@color/grayText"
            android:textSize="@dimen/w34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h25"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/h70">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/head"
                android:layout_width="@dimen/w140"
                android:layout_height="@dimen/w140"
                android:layout_marginLeft="@dimen/w70"
                android:layout_marginTop="@dimen/h70"
                android:src="@color/red"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w25"
                android:layout_marginTop="@dimen/h75"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张腾"
                        android:textColor="@color/blackText"
                        android:textSize="@dimen/w40" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/w114"
                    android:layout_marginTop="@dimen/h20"
                    android:text="02 芝披萨HY-GD1802GD1续杯咖啡"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/w37" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>