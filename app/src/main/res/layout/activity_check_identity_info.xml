<?xml version="1.0" encoding="utf-8"?>
<layout >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cocosh.shmstore.newCertification.ui.CheckIdentityInfoActivity">

        <LinearLayout
            android:layout_marginTop="@dimen/w3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/w90"
            android:paddingRight="@dimen/w90"
            android:paddingTop="@dimen/h63">

            <TextView
                style="@style/checkInfoGrayTv"
                android:text="身份证正面" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h45">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="姓名：" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/etName"
                    style="@style/checkInfoEt"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/w120"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h45">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="性别：" />

                <EditText
                    android:id="@+id/etSex"
                    style="@style/checkInfoEt"
                    android:editable="false"
                    android:layout_width="@dimen/w182"
                    android:layout_marginLeft="@dimen/w120" />

                <RelativeLayout
                    android:id="@+id/rlSex"
                    android:layout_width="@dimen/w56"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@id/etSex"
                    android:layout_alignRight="@id/etSex"
                    android:background="@drawable/edit_border1"
                    android:clickable="true">

                    <com.cocosh.shmstore.widget.textview.ICONTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/iconDown"
                        android:textColor="#797979"
                        android:textSize="@dimen/w30" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h45">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="民族：" />

                <EditText
                    android:id="@+id/etNation"
                    style="@style/checkInfoEt"
                    android:editable="false"
                    android:layout_width="@dimen/w282"
                    android:layout_marginLeft="@dimen/w120" />

                <RelativeLayout
                    android:id="@+id/rlNation"
                    android:layout_width="@dimen/w56"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@id/etNation"
                    android:layout_alignRight="@id/etNation"
                    android:background="@drawable/edit_border1">

                    <com.cocosh.shmstore.widget.textview.ICONTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/iconDown"
                        android:textColor="#797979"
                        android:textSize="@dimen/w30" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/w546"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h68">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="出生：" />

                <EditText
                    android:id="@+id/etBirth"
                    android:editable="false"
                    style="@style/checkInfoEt"
                    android:layout_width="@dimen/w425"
                    android:layout_marginLeft="@dimen/w120" />

                <com.cocosh.shmstore.widget.textview.ICONTextView
                    android:id="@+id/itvBirth"
                    android:layout_marginRight="@dimen/w14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/iconCalendar"
                    android:textSize="@dimen/w44"
                    android:textColor="#858585"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_width="@dimen/w60"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h68">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="公民身份号码：" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/etIdCard"
                    style="@style/checkInfoEt"
                    android:maxLength="18"
                    android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/w273" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h133"
                android:layout_marginTop="@dimen/h68">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/h19"
                    android:text="住址："
                    android:textSize="@dimen/h35" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/etAddress"
                    style="@style/checkInfoEt"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/w120" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="@dimen/w54"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@id/etAddress"
                    android:layout_alignRight="@id/etAddress"
                    android:background="@drawable/edit_border1">

                    <com.cocosh.shmstore.widget.textview.ICONTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/iconUp"
                        android:textSize="@dimen/w30"
                        android:textColor="#797979"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/h25"/>

                    <com.cocosh.shmstore.widget.textview.ICONTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textSize="@dimen/w30"
                        android:textColor="#797979"
                        android:layout_marginBottom="@dimen/h25"
                        android:layout_centerHorizontal="true"
                        android:text="@string/iconDown" />

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                style="@style/checkInfoGrayTv"
                android:layout_marginTop="@dimen/h62"
                android:text="身份证反面" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h45">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="有效期限：" />

                <EditText
                    android:id="@+id/etDateStart"
                    style="@style/checkInfoEt"
                    android:editable="false"
                    android:layout_width="@dimen/w319"
                    android:layout_marginLeft="@dimen/w189" />

                <com.cocosh.shmstore.widget.textview.ICONTextView
                    android:id="@+id/itvDateStart"
                    android:layout_marginRight="@dimen/w14"
                    android:layout_centerVertical="true"
                    android:text="@string/iconCalendar"
                    android:textSize="@dimen/w44"
                    android:textColor="#858585"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_width="@dimen/w60"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@id/etDateStart"/>

                <ImageView
                    android:layout_width="@dimen/w52"
                    android:layout_height="@dimen/h3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w12"
                    android:layout_toRightOf="@id/etDateStart"
                    android:background="#787878" />

                <EditText
                    android:id="@+id/etDateEnd"
                    style="@style/checkInfoEt"
                    android:editable="false"
                    android:layout_width="@dimen/w318"
                    android:layout_alignParentRight="true" />

                <com.cocosh.shmstore.widget.textview.ICONTextView
                    android:id="@+id/itvDateEnd"
                    android:layout_marginRight="@dimen/w14"
                    android:layout_centerVertical="true"
                    android:text="@string/iconCalendar"
                    android:textSize="@dimen/w44"
                    android:textColor="#858585"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_width="@dimen/w60"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@id/etDateEnd"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h68"
                android:layout_marginTop="@dimen/h68">

                <TextView
                    style="@style/checkInfoLeftTv"
                    android:text="签发机关：" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/etOrganization"
                    style="@style/checkInfoEt"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/w189" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h125"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tvAgain"
                style="@style/checkInfoBottomTvStyle"
                android:background="@color/text_gray"
                android:text="重新扫描" />

            <TextView
                android:id="@+id/tvNext"
                style="@style/checkInfoBottomTvStyle"
                android:background="@color/red"
                android:text="确认且下一步" />

        </LinearLayout>
    </RelativeLayout>
</layout>