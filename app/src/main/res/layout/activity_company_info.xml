<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w37"
                android:layout_marginRight="@dimen/w37">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h969"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/h58"
                    android:layout_marginLeft="@dimen/w154"
                    android:layout_marginRight="@dimen/w154"
                    android:layout_marginTop="@dimen/h47"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/bg_yingye_border" />

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/w605"
                        android:layout_height="@dimen/h856"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/h50"
                        app:srcCompat="@drawable/yingyezhizhao" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <TextView
                    android:id="@+id/iservice_companynumber_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="统一社会信用代码（税号）："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/edt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:gravity="right|center_vertical"
                    android:hint="请输入统一社会信用代码"
                    android:inputType="text"
                    android:maxLength="18"
                    android:minWidth="@dimen/w300"
                    android:paddingLeft="@dimen/w10"
                    android:paddingRight="@dimen/w10"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:id="@+id/iservice_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="名称："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/edt_name"
                    style="@style/EidttextStyle"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w125"
                    android:background="@null"
                    android:gravity="center|right"
                    android:hint="请输入企业名称"
                    android:inputType="textMultiLine"
                    android:maxLength="40"
                    android:minWidth="@dimen/w300"
                    android:paddingLeft="@dimen/w10"
                    android:paddingRight="@dimen/w10"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="法定代表人："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/edt_layer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入法定代表人姓名"
                    android:maxLength="20"
                    android:minWidth="@dimen/w300"
                    android:paddingLeft="@dimen/w10"
                    android:paddingRight="@dimen/w10"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="营业期限："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/w10"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="营业期限"
                        android:minWidth="@dimen/w300"
                        android:textColor="#333333"
                        android:textSize="@dimen/h37" />

                    <com.cocosh.shmstore.widget.textview.ICONTextView
                        android:id="@+id/iv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w10"
                        android:text="@string/iconCalendar"
                        android:textSize="@dimen/h60" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w10"
                        android:layout_marginRight="@dimen/w10"
                        android:text="至"
                        android:textColor="#666666"
                        android:textSize="@dimen/h37" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w10"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="营业期限"
                        android:minWidth="@dimen/w300"
                        android:textColor="#333333"
                        android:textSize="@dimen/h37" />

                    <com.cocosh.shmstore.widget.textview.ICONTextView
                        android:id="@+id/iv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/w10"
                        android:layout_toRightOf="@+id/tv_start_time"
                        android:text="@string/iconCalendar"
                        android:textSize="@dimen/h60" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="类型："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/edt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w120"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="选填"
                    android:minWidth="@dimen/w300"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:id="@+id/iservice_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="住所："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/edt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w120"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="地址"
                    android:minWidth="@dimen/w300"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="注册资本："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.eidttext.SmEditText
                    android:id="@+id/edt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w240"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="选填(中文大写输入)"
                    android:inputType="text"
                    android:minWidth="@dimen/w300"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h123"
                android:layout_marginLeft="@dimen/w32"
                android:layout_marginRight="@dimen/w32">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="成立日期："
                    android:textColor="#666666"
                    android:textSize="@dimen/h37" />

                <TextView
                    android:id="@+id/tv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_create"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="成立日期"
                    android:minWidth="@dimen/w300"
                    android:textColor="#333333"
                    android:textSize="@dimen/h37" />

                <com.cocosh.shmstore.widget.textview.ICONTextView
                    android:id="@+id/iv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/w10"
                    android:text="@string/iconCalendar"
                    android:textSize="@dimen/h60" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#e8e8e8" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h127"
                android:layout_marginBottom="@dimen/h60"
                android:layout_marginLeft="@dimen/w64"
                android:layout_marginRight="@dimen/w64"
                android:layout_marginTop="@dimen/h60"
                android:background="@color/red"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/h40" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>