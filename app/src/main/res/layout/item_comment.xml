<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/w20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="@dimen/w95"
            android:layout_height="@dimen/h95"
            android:layout_margin="@dimen/w35"
            android:src="@color/activity_bg" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/w35"
            android:layout_marginRight="@dimen/w30"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/blackText"
            android:textSize="@dimen/w42" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hedgehog.ratingbar.RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/w35"
            android:layout_marginLeft="@dimen/w35"
            hedgehog:clickable="false"
            hedgehog:halfstart="false"
            hedgehog:starCount="5"
            hedgehog:starEmpty="@mipmap/ic_star_gray"
            hedgehog:starFill="@mipmap/ic_star_red"
            hedgehog:starImageHeight="@dimen/h64"
            hedgehog:starImageWidth="@dimen/w64"/>

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/w40"
            android:layout_marginLeft="@dimen/w40"
            android:text="非常好"
            android:textColor="@color/grayText"
            android:textSize="@dimen/w34" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w2"
        android:layout_marginTop="@dimen/w30"
        android:background="@color/line_gray" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w35"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="这个人很懒，啥也没写"
        android:textColor="@color/blackText"
        android:textSize="@dimen/w42" />


    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w35"
        android:layout_marginRight="@dimen/w35"
        android:layout_marginBottom="@dimen/w35"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="2018-12-19 15:39:06"
        android:textColor="@color/grayText"
        android:textSize="@dimen/w42" />
</LinearLayout>