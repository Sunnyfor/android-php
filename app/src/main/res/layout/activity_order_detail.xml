<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status"
                style="@style/text_nomal_min"
                android:text="当前订单状态：等待买家付款" />

            <TextView
                android:id="@+id/time"
                style="@style/text_nomal_small"
                android:text="付款剩余时间23小时59分钟" />

            <TextView
                android:id="@+id/hint"
                style="@style/text_nomal_small"
                android:text="如果逾期未发货，订单将自动关闭，款项全部退回" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderInfoLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderNumber"
                style="@style/text_nomal_min"
                android:text="订单编号：2356458687907654323" />

            <TextView
                android:id="@+id/orderPlaceTime"
                style="@style/text_nomal_small"
                android:text="下单时间：2017-11-11  00:00:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.cocosh.shmstore.widget.textview.ICONTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconCalendar"
                android:textSize="@dimen/h50" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_nomal_min"
                    android:text="收货信息：" />

                <TextView
                    android:id="@+id/buyer"
                    style="@style/text_nomal_small"
                    android:text="张三          13800000000" />

                <TextView
                    android:id="@+id/address"
                    style="@style/text_nomal_small"
                    android:text="北京市海淀区北清路100号" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logisticsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logisticsWay"
                style="@style/text_nomal_min"
                android:text="发货方式：物流" />

            <TextView
                android:id="@+id/logisticsName"
                style="@style/text_nomal_min"
                android:text="物流公司：韵达物流" />

            <TextView
                android:id="@+id/logisticsNumber"
                style="@style/text_nomal_min"
                android:text="运单号码：00098087652" />

            <LinearLayout
                android:id="@+id/showDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginRight="@dimen/w50"
                android:inAnimation="@anim/slide_in_top"
                android:orientation="vertical"
                android:outAnimation="@anim/slide_out_top"
                android:persistentDrawingCache="animation"
                android:visibility="gone">

                <View
                    android:id="@+id/logisticsLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h2"
                    android:layout_marginTop="@dimen/h30"
                    android:background="@color/line_gray" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/logisticsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h30"/>
            </LinearLayout>

            <TextView
                android:id="@+id/showLogisticsInfo"
                style="@style/text_nomal_min"
                android:layout_gravity="center"
                android:text="展开物流信息" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:background="@color/white">

            <ImageView
                android:id="@+id/goodsPic"
                android:layout_width="@dimen/w310"
                android:layout_height="@dimen/h310"
                android:layout_centerVertical="true"
                android:src="@color/red" />

            <TextView
                android:id="@+id/shopName"
                style="@style/text_nomal_min"
                android:layout_marginTop="@dimen/h50"
                android:layout_toRightOf="@+id/goodsPic"
                android:text="朴坊" />

            <TextView
                android:id="@+id/goodsName"
                style="@style/text_nomal_min"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginTop="@dimen/h50"
                android:layout_toRightOf="@+id/shopName"
                android:text="不锈钢金碗" />


            <TextView
                android:id="@+id/goodsType"
                style="@style/text_nomal_min"
                android:layout_below="@+id/shopName"
                android:layout_toRightOf="@+id/goodsPic"
                android:text="差高烧汤灿装" />

            <TextView
                android:id="@+id/goodsPrice"
                style="@style/text_nomal_min"
                android:layout_below="@+id/goodsType"
                android:layout_toRightOf="@+id/goodsPic"
                android:text="￥20.00" />

            <TextView
                android:id="@+id/goodsCount"
                style="@style/text_nomal_small"
                android:layout_below="@+id/goodsType"
                android:layout_marginLeft="@dimen/w20"
                android:layout_toRightOf="@+id/goodsPrice"
                android:text="x1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h2"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/freightPrice"
            style="@style/text_nomal_min"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="right"
            android:text="运费：包邮" />

        <TextView
            android:id="@+id/totalPrice"
            style="@style/text_nomal_min"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="right"
            android:text="实付款：¥ 20.00" />

        <LinearLayout
            android:id="@+id/orderInfoShowLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showNumber"
                style="@style/text_nomal_min"
                android:text="订单编号：2356458687907654323" />

            <TextView
                android:id="@+id/showWaterNumber"
                style="@style/text_nomal_min"
                android:text="流水号：2356458687907654323" />

            <TextView
                android:id="@+id/showPayWay"
                style="@style/text_nomal_small"
                android:text="支付方式：首媒支付" />

            <TextView
                android:id="@+id/showPlaceTime"
                style="@style/text_nomal_small"
                android:text="下单时间：2017-11-11  00:00:00" />

            <TextView
                android:id="@+id/showPayTime"
                style="@style/text_nomal_small"
                android:text="付款时间：2017-11-11  00:00:00" />

            <TextView
                android:id="@+id/showStartTime"
                style="@style/text_nomal_small"
                android:text="发货时间：2017-11-11  00:00:00" />

            <TextView
                android:id="@+id/showTime"
                style="@style/text_nomal_small"
                android:text="交货时间：2017-11-11  00:00:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消订单" />

            <Button
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去支付" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
